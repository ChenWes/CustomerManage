
@{
    ViewBag.Title = "List";
    Layout = null;
}

<script src="~/Scripts/table/jquery.min.js"></script>

<script src="~/Scripts/table/bootstrap.min.js"></script>
<link rel="stylesheet" href="~/Scripts/table/css/bootstrap.min.css" />

<script src="~/Scripts/table/bootstrap-table.js"></script>
<link rel="stylesheet" href="~/Scripts/table/css/bootstrap-table.css" />
<script src="~/Scripts/table/bootstrap-table-zh-CN.js"></script>

<script src="~/Scripts/table/app.js"></script>

<body>
    <div class="panel-body" style="ppadding-bottom: 0px;">
        <div class="panel panel-default">
            <div class="panel-heading">Search</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <label class="control-label col-sm-1" for="txt_departmentname">Dept Name</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" id="txt_departmentname" />
                    </div>

                    <label class="control-label col-sm-1" for="txt_status">Status</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" id="txt_status" />
                    </div>
                    <div class="col-sm-4" style="text-align: left;">
                        <button type="button" style="margin-left: 50px;" id="btn_search" class="btn btn-primary">Search</button>
                    </div>
                </form>

            </div>
        </div>

        <div id="toolbar" class="btn-group">
            <button id="btn_add" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
            </button>
            <button id="btn_edit" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
            </button>
            <button id="btn_delete" type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
            </button>
        </div>
        <table id="tb_departments"></table>
    </div>
</body>

